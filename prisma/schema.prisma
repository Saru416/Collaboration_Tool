
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String  @id @default(uuid())
  authId    String  @unique  // Link to Supabase auth.users UUID
  email     String  @unique
  username  String
  createdAt DateTime @default(now())
}
